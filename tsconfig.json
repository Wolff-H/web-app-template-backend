{
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "target": "esnext",
        "module": "esnext",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}